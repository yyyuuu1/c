int main()
{
	int line = 0;//行数
	scanf_s("%d", &line);
	//打印上半部分
	int i = 0;
	for (i = 0; i < line; i++)
	{
		int j = 0;
		for (j = 0; j <line-1-i ; j++)
		{
			//打印空格
			printf(" ");
		}
		for (j = 0; j <2*i+1 ; j++)
		{
			//打印*号
			printf("*");
		}
		printf("\n");
	}

	//打印下半部分
	for (i = 0; i < line - 1; i++)
	{
		//打印空格
		int j = 0;
		for (j = 0; j <=i ; j++)
		{
			printf(" ");
		}
		// 打印*号
		for (j = 0; j <2*(line-1-i)-1; j++)
		{
			printf("*");
		}
		printf("\n");
	}
	return 0;
}
