//打印金字塔
//   *
//  ***
// *****
//*******

int main()
{
	int i = 0;
	int j = 0;
	int k = 0;
	int n = 0;
	scanf_s("%d",&n);                                        
	for (i = 1; i <= n; i++)
	{
		for (j = 1; j <= n - i; j++)
			printf(" ");
		for (k = 1; k <= 2 * i - 1; k++)
			printf("*");
		    printf("\n");
	}
	return 0;
}
